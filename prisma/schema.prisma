// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id               String  @id @default(cuid())
  email            String  @unique
  name             String
  role             String  @default("USER") // "ADMIN" or "USER"
  linearCustomerId String? // Link to Linear Customer ID
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Account {
  id        String   @id @default(cuid())
  name      String   @unique
  boards    Board[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BoardType {
  SUPPORT
  PROJECT
}

model Board {
  id        String   @id @default(cuid())
  name      String
  type      BoardType @default(SUPPORT)
  accountId String
  account   Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  teamId    String
  projectId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([accountId, type])
}
